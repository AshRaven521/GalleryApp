<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GalleryMobile.MVVM.View.Pages.ImageDetails"
             xmlns:viewModel="clr-namespace:GalleryMobile.MVVM.ViewModel"
             Title="ImageDetailsPage"
             x:DataType="viewModel:ImageDetialsViewModel">
    <VerticalStackLayout>
        <Image Aspect="AspectFit"
               Margin="5, 5, 5, 5">
            <Image.Source>
                <UriImageSource Uri="{Binding Photo.Url}"
                                CachingEnabled="False"/>
            </Image.Source>
        </Image>
    </VerticalStackLayout>
</ContentPage>